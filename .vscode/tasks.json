{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PIC18F4520",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "mcc18 -p=18f4520 \"${file}\" -fo=\"${fileDirname}\\${fileBasenameNoExtension}.o\" -I=\"C:\\MCC18\\h\" -k; if ($?) { Write-Host “Building... :${fileDirname}\\${fileBasenameNoExtension}.” -ForegroundColor Yellow ; Write-Host 'Build completed successfully!' -ForegroundColor Green } else { Write-Host 'Build failed! Check the error code above! ^^^' -ForegroundColor Red; exit 1 }"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "mcc18",
                "fileLocation": ["relative", "${fileDirname}"],
                "pattern": {
                    "regexp": "^(.*)\\((\\d+)\\) : (ERROR|WARNING) (.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Link PIC18F4520",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "mplink \"${fileDirname}\\${fileBasenameNoExtension}.o\" /l\"C:\\MCC18\\lib\" \"C:\\MCC18\\lkr\\18f4520.lkr\" /m\"${fileDirname}\\${fileBasenameNoExtension}.map\" /o\"${fileDirname}\\${fileBasenameNoExtension}.hex\" /v; if ($?) { Write-Host 'Link completed successfully!' -ForegroundColor Green } else { Write-Host 'Link failed!' -ForegroundColor Red }"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "mplink",
                "fileLocation": ["relative", "${fileDirname}"],
                "pattern": {
                    "regexp": "^(.*)\\((\\d+)\\) : (ERROR|WARNING) (.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false
            },
            "dependsOn": ["Build PIC18F4520"]
        },
        {
            "label": "Run Proteus",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}\\.vscode\\open-proteus.ps1",
                "\"${fileDirname}\\${fileBasenameNoExtension}.pdsprj\""
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "dependsOn": ["Link PIC18F4520"]
        },
        {
            "label": "Clean Up",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "del /Q \"${fileDirname}\\*.o\" \"${fileDirname}\\*.map\" \"${fileDirname}\\*.lst\" \"${fileDirname}\\*.cod\" \"${fileDirname}\\*.mcs\" \"${fileDirname}\\*.pdsbak\" \"${fileDirname}\\*.workspace\" \"${fileDirname}\\*.err\" && echo Clean up all file *.o, *.map, *.lst, *.cod, *.mcs, *.pdsbak, *.workspace, *.err && echo If you want to keep it, please remove it from the tasks.json file or comment it out.",
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "dependsOn": ["Run Proteus"]
        },
        {
            "label": "Build, Link and Run Proteus",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Clean Up"],
            "problemMatcher": []
        },
        {
            "label": "Open Proteus",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}\\.vscode\\open-proteus.ps1",
                "\"${fileDirname}\\${fileBasenameNoExtension}.pdsprj\"",
                "-forceNewInstance"
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Open MPLab",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}\\.vscode\\open-with-mplab-ide.ps1",
                "\"${fileDirname}\\${fileBasenameNoExtension}.mcp\""
            ],
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        }
    ]
}
